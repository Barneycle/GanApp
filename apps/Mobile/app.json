{
  "expo": {
    "name": "GanApp",
    "slug": "ganapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ganapp-logo.png",
    "scheme": "ganapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes for event check-ins and attendance tracking.",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save QR code images to your photo library.",
        "NSPhotoLibraryUsageDescription": "This app needs access to save QR code images to your photo library.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "usesAppleSignIn": false,
      "bundleIdentifier": "com.ganapp.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ganapp-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "package": "com.ganapp.mobile",
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/ganapp-splash.png",
          "imageWidth": 300,
          "resizeMode": "cover",
          "backgroundColor": "#0A1E3A"
        }
      ],
      [
        "react-native-vision-camera",
        {
          "enableCodeScanner": true
        }
      ],
      "expo-secure-store",
      "expo-media-library",
      "expo-document-picker",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/ganapp-logo.png",
          "color": "#1e40af",
          "sounds": []
        }
      ],
      "./plugins/withMediaStoreSaver.js"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "393cbbac-70d0-4acc-bd29-0049e5d480c1"
      }
    },
    "owner": "puzzles"
  }
}
